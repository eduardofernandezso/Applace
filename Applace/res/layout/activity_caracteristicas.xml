<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/caract_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" 
            android:background="@drawable/ab_background_textured_applacegps" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Título del anuncio:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/car_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/row_titulo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="N° máx de huéspedes: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Spinner
                            android:id="@+id/sp_capacidad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/row_precio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="N° Camas: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Spinner
                            android:id="@+id/sp_camas"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="N° Baños:"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Spinner
                            android:id="@+id/sp_banos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="N° Habitaciones:"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Spinner
                            android:id="@+id/sp_piezas"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Foto"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/car_foto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:inputType="textMultiLine" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Precio"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/car_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Descripción"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/car_descrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:inputType="textMultiLine" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Servicios:"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <CheckBox
                        android:id="@+id/ch_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TV" />

                    <CheckBox
                        android:id="@+id/ch_internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internet" />

                    <CheckBox
                        android:id="@+id/ch_telefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono" />

                    <CheckBox
                        android:id="@+id/ch_piscina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Piscina" />

                    <CheckBox
                        android:id="@+id/ch_calefaccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calefacción" />

                    <CheckBox
                        android:id="@+id/ch_cocina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cocina" />

                    <CheckBox
                        android:id="@+id/ch_lavadora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lavadora" />

                    <CheckBox
                        android:id="@+id/ch_higiene"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toallas, sabanas, jabón y papel higiénico" />

                    <CheckBox
                        android:id="@+id/ch_quincho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quincho" />

                    <CheckBox
                        android:id="@+id/ch_aire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aire acondicionado" />

                    <CheckBox
                        android:id="@+id/ch_desayuno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desayuno" />

                    <CheckBox
                        android:id="@+id/ch_estacionamiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estacionamiento" />

                    <CheckBox
                        android:id="@+id/ch_mascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mascotas" />

                    <Button
                        android:id="@+id/but_publicar"
                        android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@drawable/ab_background_textured_applacegps"
			            android:text="Publicar"
			            android:textColor="@color/blanco"
			            android:textStyle="bold" />
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>