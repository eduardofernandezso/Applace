<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/facebook"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/facebook2"
            android:enabled="true" />

        <TextView
            android:id="@+id/olvid_link"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/regCorreo"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/correo" />

        <TextView
            android:id="@+id/reg_link"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/iniCorreo"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/iniciocorreo" />
    </LinearLayout>

</FrameLayout>
