<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.retni.applacegps"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Exampleapplace" >

        <activity
            android:name="com.retni.applacegps.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.retni.applacegps.Logueado"
             android:configChanges="orientation|keyboardHidden|screenSize"            >
            
        </activity>
        <activity
            android:name="com.retni.applacegps.Activity_iniciarSesion">
        </activity>
        <activity
            android:name="com.retni.applacegps.Activity_registro">
        </activity>
        <activity
            android:name="com.retni.applacegps.Activity_editarPerfil">
        </activity>
        <activity
            android:name="com.retni.applacegps.Activity_perfil">
        </activity>
        <activity
            android:name="com.retni.applacegps.Activity_caracteristicas">
        </activity>
        <service android:name="com.backendless.AndroidService"/>
 		<activity
            android:name="com.retni.applacegps.logindeface">
        </activity>
        <activity
            android:name="com.retni.applacegps.UserDetailsActivity">
        </activity>
        <activity
            android:name="com.retni.applacegps.LoginActivity"
            android:label="@string/app_name">
        </activity>        
        
		<activity android:name="com.facebook.LoginActivity"
                  android:label="@string/app_name" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" 
            android:value="@string/app_id"/>
        <activity
            android:name="com.retni.applacegps.compartirface">
        </activity>
        <activity
            android:name="com.retni.applacegps.Activity_verAlojamiento">
        </activity>
    </application>

</manifest>
